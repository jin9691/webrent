<header class="navbar navbar-default navbar-fixed-top bs-docs-nav" role="banner">
  <div style="padding-left:20px;padding-right:20px">
    <div class="navbar-header">
      <a class="navbar-brand" href="<%=root_path %>" style="font-size:30px"><b>Webrent</b></a>
    </div>
    <nav class="collapse navbar-collapse bs-navbar-collapse" role="navigation">
      <ul class="nav navbar-nav">
        
        <li class='<%= "active" if check_page()[0] == "welcome" %>'>
          <a style="width:130px" href="<%=welcome_path %>"><span style="padding-right:5px" class="glyphicon glyphicon-home"></span> Trang chủ</a>
        </li>
        
        <li class='<%= "active" if check_page()[0] == "intro" %>'>
          <a style="width:130px" href="#"><span style="padding-right:5px" class="glyphicon glyphicon-star"></span> Giới thiệu</a>
        </li>
        
        <li class='<%= "active" if check_page()[0] == "websites" %>'>
          <a style="width:190px" href="#"><span style="padding-right:5px" class="glyphicon glyphicon-list"></span> Danh sách website</a>
        </li>
        
        <li class='<%= "active" if check_page()[0] == "store" %>'>
          <a style="width:130px" href=""><span style="padding-right:5px" class="glyphicon glyphicon-shopping-cart"></span> Cửa hàng</a>
        </li>
        
        <li>
          <div id="custom-search-form" class="form-search form-horizontal">
            <div class="input-append">
              <input type="text" class="search-query form-control" placeholder="Từ khóa tìm kiếm...">
              <button class="btn btn-search"><img src="/assets/icons/search_1.png"></button>
            </div>
          </div>
      </li>
      </ul>
      <ul class="nav navbar-nav pull-right">
        <% if signed_in? %>
        <li>
          <div class="btn-group" style="padding-top:8px">
            <button type="button" class="btn btn-outline-webrent-active" style="width:235px">Xin chào, <b><%= current_user.name.truncate(20) %></b></button>
            <button type="button" class="btn btn-outline-webrent-active dropdown-toggle" data-toggle="dropdown" style="height:33px">
              <span class="glyphicon glyphicon-cog"></span>
            </button>
            <ul class="dropdown-menu" role="menu" style="width:267px">
              <li><a href="#"><i class="glyphicon glyphicon-list" style="margin-right:10px"></i> Websites <span style="margin-left:10px" class="badge badge-primary">4</span></a></li>
              <li><a href="#"><i class="glyphicon glyphicon-shopping-cart" style="margin-right:10px"></i> Đơn hàng <span style="margin-left:10px" class="badge badge-primary">10</span></a></li>
              <li class="divider"></li>
              <li><a href="#"><i class="glyphicon glyphicon-user" style="margin-right:10px"></i> Thông tin cá nhân</a></li>
              <li><a href="#"><i class="glyphicon glyphicon-usd" style="margin-right:10px"></i> Nạp thẻ</a></li>
              <% if current_user.admin %>
              <li><a href="<%= users_path() %>" method="GET"><i class="glyphicon glyphicon-wrench" style="margin-right:10px"></i> Quản lý Webrent</a></li>
              <% end %>
              <li class="divider"></li>
              <li><%= link_to raw("<i class='glyphicon glyphicon-off' style='margin-right:10px'></i> Đăng xuất"), signout_path, method: "delete" %></li>
            </ul>
          </div>
        </li>
        <% else %>
        
        <li class='<%= "active" if check_page()[0] == "signup" %>'><%= link_to "Đăng ký", signup_path,style: "width:120px;text-align:center" %></li>
        
        <li class='<%= "active" if check_page()[0] == "signin" %>'>
          <%= link_to "Đăng nhập", signin_path,style: "width:120px;text-align:center" %>
        </li>
        
      </li>
      <% end %>
    </ul>
  </nav>
</div>
</header>


